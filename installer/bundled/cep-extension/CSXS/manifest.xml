<?xml version="1.0" encoding="UTF-8"?>
<ExtensionManifest xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   ExtensionBundleId="com.pulse.aeoptimizer"
                   ExtensionBundleVersion="1.0.0"
                   Version="11.0">

    <ExtensionList>
        <Extension Id="com.pulse.aeoptimizer.panel" Version="1.0.0"/>
    </ExtensionList>

    <ExecutionEnvironment>
        <HostList>
            <!-- After Effects CC 2019 and later -->
            <Host Name="AEFT" Version="[16.0,99.9]"/>
        </HostList>
        <LocaleList>
            <Locale Code="All"/>
        </LocaleList>
        <RequiredRuntimeList>
            <RequiredRuntime Name="CSXS" Version="9.0"/>
        </RequiredRuntimeList>
    </ExecutionEnvironment>

    <DispatchInfoList>
        <Extension Id="com.pulse.aeoptimizer.panel">
            <DispatchInfo>
                <Resources>
                    <MainPath>./index.html</MainPath>
                    <ScriptPath>./jsx/pulse.jsx</ScriptPath>
                    <CEFCommandLine>
                        <Parameter>--enable-nodejs</Parameter>
                        <Parameter>--mixed-context</Parameter>
                    </CEFCommandLine>
                </Resources>
                <Lifecycle>
                    <AutoVisible>true</AutoVisible>
                </Lifecycle>
                <UI>
                    <Type>Panel</Type>
                    <Menu>Pulse</Menu>
                    <Geometry>
                        <Size>
                            <Height>600</Height>
                            <Width>320</Width>
                        </Size>
                        <MinSize>
                            <Height>400</Height>
                            <Width>280</Width>
                        </MinSize>
                        <MaxSize>
                            <Height>1200</Height>
                            <Width>600</Width>
                        </MaxSize>
                    </Geometry>
                    <Icons>
                        <Icon Type="Normal">./icons/icon.png</Icon>
                    </Icons>
                </UI>
            </DispatchInfo>
        </Extension>
    </DispatchInfoList>
</ExtensionManifest>
